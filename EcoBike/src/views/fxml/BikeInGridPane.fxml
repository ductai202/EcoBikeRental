<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="130.0" prefWidth="310.0" style="-fx-border-color: #00FF00; -fx-background-radius: 8;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="bikeImageView" fitHeight="79.0" fitWidth="115.0" layoutX="20.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../assets/images/bike.jpeg" />
         </image>
      </ImageView>
      <Label fx:id="typeBikeLabel" layoutX="146.0" layoutY="35.0" text="Loại: xe đạp thường">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="bikeCodeLabel" layoutX="148.0" layoutY="10.0" text="Mã xe: B123">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="inUseLabel" layoutX="148.0" layoutY="60.0" text="Tình trạng: Sẵn có" textFill="LIME">
         <font>
            <Font name="System Bold Italic" size="16.0" />
         </font>
      </Label>
      <HBox fx:id="optionHBox" alignment="CENTER" layoutX="125.0" layoutY="90.0" prefHeight="31.0" prefWidth="183.0" spacing="5.0">
         <children>
            <Button fx:id="viewBikeButton" lineSpacing="5.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="87.0" style="-fx-border-radius: 8; -fx-background-color: lime;" text="Xem thêm">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            <Button fx:id="editBikeButton" lineSpacing="5.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="87.0" style="-fx-border-radius: 8; -fx-background-color: lime;" text="Sửa xe">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="bikeNameLabel" alignment="CENTER" layoutY="93.0" prefHeight="25.0" prefWidth="126.0" text="Santa Cruz">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</AnchorPane>
